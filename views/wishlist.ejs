<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Wishlist</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />

    <!-- CSS link -->
    <link rel="stylesheet" href="/stylesheets/layout.css" />
    <link rel="stylesheet" href="/stylesheets/wishlist-cart.css" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Yatra+One&display=swap"
      rel="stylesheet"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Amaranth:ital,wght@0,400;0,700;1,400;1,700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container-fluid">
      <header
        class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom"
      >
        <div class="col-md-3 mb-2 mb-md-0" style="margin-left: 150px">
          <a
            href="/"
            class="d-inline-flex link-body-emphasis text-decoration-none"
          >
            <strong style="font-size: 24px"
              ><span>Food</span><span style="color: crimson">Hunt</span></strong
            >
          </a>
        </div>

        <div>
          <a href="#blank"
            ><i class="fa-solid fa-magnifying-glass"></i> Search</a
          >
        </div>
        <div type="button">
          <a href="#blank"><i class="fa-solid fa-tags"></i> Offers</a>
        </div>
        <div>
          <a href="/wishlist"
            ><i class="fa-solid fa-heart"></i>

            <span id="wishlist-count"
              ><% if (locals.wishListLen) { %><%= locals.wishListLen %><% }
              %></span
            >
            Whishlist
          </a>
        </div>

        <div>
          <a href="/cart"
            ><i class="fa-solid fa-cart-shopping"></i
            ><span id="cart-count"
              ><% if (locals.cartLen) { %><%= locals.cartLen %><% } %></span
            >
            Cart</a
          >
        </div>

        <div class="col-md-3 text-end">
          <a href="/user/signin" type="button" class="btn me-2"
            ><i class="fa-solid fa-user"></i> Sign In</a
          >
        </div>
      </header>
    </div>

    <!-- Middle Section -->
    <div class="container d-flex flex-row justify-content-center">
      <main id="food-container" class="col-md-10 mb-3">
        <% if (locals.wishlistFoods) { %>
         <h2
         style="
           color: rgb(207, 30, 89);
           font-size: 24px;
           margin: 50px 0 35px 0;
         "
        >
         Items Added in Wishlist
       </h2>
       <table id="wishlist-items">
         <thead>
           <th>Item</th>
           <th>Name</th>
           <th></th>
         </thead>
         <tbody id="tbdy">
          <% wishlistFoods.forEach(food => { %>
            <tr>
              <td><img src="/images/items/<%= food.foodImage.filename %>" alt="" width="100" height="100"/></td>
              <td id = ""><%= food.name %></td>
              <td>
                <button type="button" class="wishlistbtn" onclick="addToCart(this)">
                  Add to Cart</button>
              </td>
            </tr>
          <% }) %>
         </tbody>
       </table>
        <% } %>
      </main>

      <!-- Right Sidebar -->
      <aside class="col-md-2 sidebar">
 
      </aside>
    </div>

    <div class="container-fluid">
      <footer
        class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top"
      >
        <div
          class="col-md-4 d-flex align-items-center"
          style="font-size: 18px; margin-left: 100px"
        >
          <span class="mb-3 mb-md-0 text-body-secondary"
            >Â© 2024 Company, Inc</span
          >
        </div>

        <ul
          class="nav col-md-4 justify-content-end list-unstyled d-flex"
          style="font-size: 24px; margin-right: 100px"
        >
          <li class="ms-3">
            <a class="text-body-secondary" href="#"
              ><i class="fa-brands fa-facebook"></i
            ></a>
          </li>
          <li class="ms-3">
            <a class="text-body-secondary" href="#"
              ><i class="fa-brands fa-instagram"></i
            ></a>
          </li>
          <li class="ms-3">
            <a class="text-body-secondary" href="#"
              ><i class="fa-brands fa-twitter"></i
            ></a>
          </li>
        </ul>
      </footer>
    </div>


    <script src="/javascript/wishlist-page.js"></script>
    <script src="/javascript/cart.js"></script>
    <script
      src="https://kit.fontawesome.com/ca0799d7c9.js"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
